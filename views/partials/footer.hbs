<footer class="footer bg-dark text-light pt-5 pb-4">
  <div class="container">
    <div class="row">
      <!-- About Column -->
      <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
        <h5 class="text-uppercase mb-4">{{__ 'About Us'}}</h5>
        <p>{{siteDescription}}</p>
        <div class="social-links mt-3">
          <a href="#" class="me-2"><i class="fab fa-facebook-f"></i></a>
          <a href="#" class="me-2"><i class="fab fa-twitter"></i></a>
          <a href="#" class="me-2"><i class="fab fa-instagram"></i></a>
          <a href="#" class="me-2"><i class="fab fa-linkedin-in"></i></a>
        </div>
      </div>
      
      <!-- Quick Links -->
      <div class="col-lg-2 col-md-6 mb-4 mb-lg-0">
        <h5 class="text-uppercase mb-4">{{__ 'Quick Links'}}</h5>
        <ul class="list-unstyled">
          <li class="mb-2"><a href="/about" class="text-light">{{__ 'About Us'}}</a></li>
          <li class="mb-2"><a href="/services" class="text-light">{{__ 'Our Services'}}</a></li>
          <li class="mb-2"><a href="/blog" class="text-light">{{__ 'Blog'}}</a></li>
          <li class="mb-2"><a href="/careers" class="text-light">{{__ 'Careers'}}</a></li>
          <li class="mb-2"><a href="/contact" class="text-light">{{__ 'Contact Us'}}</a></li>
        </ul>
      </div>
      
      <!-- Services -->
      <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
        <h5 class="text-uppercase mb-4">{{__ 'Our Services'}}</h5>
        <ul class="list-unstyled">
          {{#each (getServices)}}
            <li class="mb-2">
              <a href="/services/{{slug}}" class="text-light">{{title}}</a>
            </li>
          {{/each}}
        </ul>
      </div>
      
      <!-- Contact Info -->
      <div class="col-lg-3 col-md-6">
        <h5 class="text-uppercase mb-4">{{__ 'Contact Us'}}</h5>
        <address>
          <p class="mb-2"><i class="fas fa-map-marker-alt me-2"></i> 123 Business St, City, Country</p>
          <p class="mb-2"><i class="fas fa-phone me-2"></i> +1 234 567 890</p>
          <p class="mb-2"><i class="fas fa-envelope me-2"></i> info@example.com</p>
          <p class="mb-0"><i class="fas fa-clock me-2"></i> Mon - Fri: 9:00 AM - 6:00 PM</p>
        </address>
      </div>
    </div>
    
    <!-- Copyright -->
    <div class="border-top mt-4 pt-3">
      <div class="row align-items-center">
        <div class="col-md-6 text-center text-md-start">
          <p class="mb-0">&copy; {{currentYear}} {{siteName}}. {{__ 'All rights reserved.'}}</p>
        </div>
        <div class="col-md-6 text-center text-md-end">
          <ul class="list-inline mb-0">
            <li class="list-inline-item"><a href="/privacy-policy" class="text-light">{{__ 'Privacy Policy'}}</a></li>
            <li class="list-inline-item"><a href="/terms" class="text-light">{{__ 'Terms of Service'}}</a></li>
            <li class="list-inline-item"><a href="/sitemap" class="text-light">{{__ 'Sitemap'}}</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</footer>
