<header class="header">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <!-- Logo -->
      <a class="navbar-brand" href="/">
        <img src="/images/logo.png" alt="{{siteName}}" class="logo">
      </a>
      
      <!-- Mobile Toggle Button -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <!-- Navigation Menu -->
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav {{#if (eq currentLanguage 'ar')}}me-auto{{else}}ms-auto{{end}}">
          <li class="nav-item">
            <a class="nav-link" href="/">{{__ 'Home'}}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">{{__ 'About Us'}}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/services">{{__ 'Services'}}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/blog">{{__ 'Blog'}}</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">{{__ 'Contact Us'}}</a>
          </li>
        </ul>
        
        <!-- Language Switcher -->
        <div class="language-switcher">
          {{#each availableLanguages}}
            <a href="?lang={{this}}" class="btn btn-sm {{#if (eq this ../currentLanguage)}}btn-primary{{else}}btn-outline-secondary{{/if}} ms-2">
              {{this}}
            </a>
          {{/each}}
        </div>
        
        <!-- Auth Buttons -->
        <div class="auth-buttons">
          <a href="/login" class="btn btn-outline-primary ms-3">{{__ 'Login'}}</a>
          <a href="/register" class="btn btn-primary ms-2">{{__ 'Register'}}</a>
        </div>
      </div>
    </div>
  </nav>
</header>
