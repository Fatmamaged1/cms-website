{
  "info": {
    "_postman_id": "cms-api-collection",
    "name": "CMS Website API",
    "description": "Postman collection for testing the CMS Website API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Blogs",
      "item": [
        {
          "name": "Get All Blog Posts",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/v1/blogs?page=1&limit=10&language=en"
          }
        },
        {
          "name": "Get Single Blog Post",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/v1/blogs/sample-blog-post?language=en"
          }
        },
        {
          "name": "Create Blog Post (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{admin_token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"New Blog Post\",\n  \"excerpt\": \"Short excerpt\",\n  \"content\": {\"blocks\": [{\"type\":\"paragraph\",\"data\":{\"text\":\"Content\"}}]},\n  \"status\": \"draft\",\n  \"language\": \"en\"\n}"
            },
            "url": "{{base_url}}/api/v1/blogs"
          }
        }
      ]
    },
    {
      "name": "Pages",
      "item": [
        {
          "name": "Get Page by Type",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/v1/pages/home?language=en"
          }
        }
      ]
    },
    {
      "name": "Contact",
      "item": [
        {
          "name": "Submit Contact Form",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"subject\": \"Test\",\n  \"message\": \"Hello\"\n}"
            },
            "url": "{{base_url}}/api/v1/contact"
          }
        }
      ]
    }
  ],
  "variable": [
    {"key": "base_url", "value": "http://localhost:3000"},
    {"key": "admin_token", "value": "your_jwt_token_here"}
  ]
}
