{
  "info": {
    "_postman_id": "cms-api-collection-v2",
    "name": "CMS Website API v2",
    "description": "Comprehensive Postman collection for CMS Website API with all endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Blogs",
      "item": [
        {
          "name": "Get All Blog Posts",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/v1/blogs?page=1&limit=10&language=en"
          }
        },
        {
          "name": "Get Single Blog Post",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/v1/blogs/{{blog_slug}}?language=en"
          }
        },
        {
          "name": "Create Blog Post (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{admin_token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"New Blog Post\",\n  \"slug\": \"new-blog-post\",\n  \"excerpt\": \"Short excerpt\",\n  \"content\": {\"blocks\": [{\"type\":\"paragraph\",\"data\":{\"text\":\"Content...\"}}]},\n  \"status\": \"draft\",\n  \"language\": \"en\"\n}"
            },
            "url": "{{base_url}}/api/v1/blogs"
          }
        }
      ]
    },
    {
      "name": "Pages",
      "item": [
        {
          "name": "Get Page by Type",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/v1/pages/home?language=en"
          }
        }
      ]
    },
    {
      "name": "Services",
      "item": [
        {
          "name": "Get All Services",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/v1/services?language=en"
          }
        }
      ]
    },
    {
      "name": "Careers",
      "item": [
        {
          "name": "Get Job Postings",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/v1/careers?status=published&language=en"
          }
        },
        {
          "name": "Apply for Job",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"+1234567890\",\n  \"resume\": \"https://example.com/resume.pdf\"\n}"
            },
            "url": "{{base_url}}/api/v1/careers/{{job_id}}/apply"
          }
        }
      ]
    },
    {
      "name": "Contact",
      "item": [
        {
          "name": "Submit Contact Form",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"subject\": \"Inquiry\",\n  \"message\": \"Hello, I have a question.\"\n}"
            },
            "url": "{{base_url}}/api/v1/contact"
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"yourpassword\"\n}"
            },
            "url": "{{base_url}}/api/v1/auth/login"
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{auth_token}}"}
            ],
            "url": "{{base_url}}/api/v1/auth/me"
          }
        }
      ]
    }
  ],
  "variable": [
    {"key": "base_url", "value": "http://localhost:3000"},
    {"key": "admin_token", "value": "your_jwt_token_here"},
    {"key": "auth_token", "value": "your_jwt_token_here"},
    {"key": "blog_slug", "value": "sample-blog-post"},
    {"key": "job_id", "value": "job-id-here"}
  ]
}
